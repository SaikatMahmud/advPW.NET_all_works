
@{
    ViewBag.Title = "ToDistributeList";
}

<h2>Foods Distribute List</h2>
<button class="pull-right btn btn-warning"><a href="/User/Logout">Logout</a></button>

<table class="table">
    <tr>
        <th>Restaurant Name</th>
        <th>Request Time</th>
        <th>Preserve Time (hour)</th>
        <th>Food Type</th>
        <th>Quantity (for person)</th>
        <th>Status</th>
        <th>Collected By</th>
    </tr>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.Restaurant.Name</td>
            <td>@f.RequestTime</td>
            <td>@f.PreserveTime</td>
            <td>@f.FoodType</td>
            <td>@f.Quantity</td>
            <td>@f.Status</td>
            <td>@f.CollectionStaff.Name</td>
            <td><a href="/Food/AssignDistributor/@f.Id" class="btn btn-success">Assign Distributor</a></td>
        </tr>
    }
</table>
