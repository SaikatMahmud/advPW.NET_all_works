
@{
    ViewBag.Title = "AddDistributionPlace";
}

<h2>Add Distribution Place for the Food</h2>
<button class="pull-right btn btn-warning"><a href="/User/Logout">Logout</a></button>

<p>
    Restaurant Name: <b>@Model.Restaurant.Name</b><br />
    Food Type: <b>@Model.FoodType</b><br />
    Preserve Time (in hour): <b>@Model.PreserveTime</b><br />
    Request Time: <b>@Model.RequestTime</b><br />

    Collected By: <b> @Model.CollectionStaff.Name</b><br />
</p>
<form action="" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="text" name="Place" value="" />
    <input type="submit" value="Mark as Distributed" class="btn btn-danger" />
</form>