
@{
    ViewBag.Title = "Reg";
}

<h2>Reg</h2>
@Html.ValidationSummary()

<form action="" method="post">
    Name:
    <input type="text" name="name" value="@(Model ==null ? "":Model.Name)" class="form-control" />
    <br />
    ID:
    <input type="text" name="id" value="" class="form-control" />
    <br />
    Gender:
    <input type="radio" name="gender" value="Male" class="" />Male
    <input type="radio" name="gender" value="Female" class="" />Female
    <br /><br />
    Profession: <select name="profession" class="form-control">
        <option value="">Select</option>
        <option value="Student">Student</option>
        <option value="Teacher">Teacher</option>
    </select><br /><br />

    Hobbies:
    <input type="checkbox" name="hobby[]" value="Game" />Game
    <input type="checkbox" name="hobby[]" value="Sports" />Sports
    <input type="checkbox" name="hobby[]" value="Traveling" />Traveling
    <input type="checkbox" name="hobby[]" value="Music" />Music <br /><br />
    Date of birth: <input type="date" name="dob" value="" class="form-control" />
    <br /><br />
    <input type="submit" class="btn btn-danger" />
</form>

@if (Model != null)
{
    <h2>@Model.Name</h2>
    <h2>@Model.Id</h2>
    <h2>@Model.Gender</h2>
    <h2>@Model.Profession</h2>
    @*@foreach (var item in Model.Hobby)
    {

    }*@
    <h2>@Model.Hobby</h2>
    <h2>@Model.Dob</h2>
}
